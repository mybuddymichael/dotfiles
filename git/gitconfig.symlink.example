[user]
	name = Michael Hanson
	email = Michael@Hal
[color]
	ui = auto
[color "branch"]
	current = cyan
	local = yellow
	remote = green
[color "diff"]
	meta = blue
	frag = cyan
	old = red
	new = green
	whitespace = red reverse
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[alias]
	st = status
	ci = commit
	br = branch
	tag = tag -a
	co = checkout
	up = pull --tags origin master
	pu = push origin
	# log = log --topo-order --decorate
	addp = add --patch
	mr = merge --no-ff
	unstage = reset HEAD
	grep = grep -n
[core]
	excludesfile = ~/.gitignore_global
[url "https://github.com/"]
	insteadOf = "gh:"
