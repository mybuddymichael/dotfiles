set guifont=Menlo:h12             " Font family and font size.
set antialias                     " MacVim: smooth fonts.
set encoding=utf-8                " Use UTF-8 everywhere.
set guioptions=aAce               " Hide toolbar, disable scrollbars.
set lines=82 columns=182          " Window dimensions.

if has("gui_macvim")
  macmenu &File.New\ Tab key=<nop>
  macmenu &Edit.Find.Find\ Next key=<nop>
  noremap <D-g> :Gstatus<CR>
  set transparency=3
endif
